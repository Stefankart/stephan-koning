---
import { SEO } from "astro-seo";
import Footer from "@components/footer.astro";
import Navbar from "@components/navbar/navbar.astro";
import { HeadHrefLangs } from "astro-i18next/components";
import i18next from "i18next";
import { pwaInfo } from "virtual:pwa-info";
import "@fontsource-variable/inter";
import { ViewTransitions } from "astro:transitions";

export interface Props {
	title: string;
	lang: string;
}

const canonicalURL = new URL(Astro.url.pathname, Astro.site).toString();

const resolvedImageWithDomain = new URL("/meta/opengraph.png", Astro.site).toString();

// replaced dynamically
const buildDate = __DATE__;

const { title, lang = null } = Astro.props;

const makeTitle = title ? title + " | " + "Astros" : "Astros - Starter Template for Astro with Tailwind CSS";
---

<!doctype html>
<html lang={lang ?? i18next.language}>
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<meta name="theme-color" content="#ffffff" />
		<HeadHrefLangs />

		<ViewTransitions />

		<!-- Global CSS -->
		<link rel="stylesheet" href="/index.css" />

	<SEO
  title={makeTitle}
  description="Unlock elite digital growth with our B2B services, crafted to catapult your company into the industry's top 3%.",
  canonical={canonicalURL}
  openGraph={{
    basic: {
      url: canonicalURL,
      type: "website",
      title: `DMA - Global - World-class B2B digital services for industry leadership`,
      image: resolvedImageWithDomain,
    },
    image: {
      alt: "Showcasing B2B digital transformation success",
    },
  }}

twitter={{
	creator: "@StephanDMA"
  }}
  extend={{
	// extending the default link tags
	link: [{ rel: "icon", href: "/favicon.ico" }],
	// extending the default meta tags
	meta: [
	  {
		name: "twitter:image",
		content: "https://user-images.githubusercontent.com/5182256/131216951-8f74f425-f775-463d-a11b-0e01ad9fce8d.png",
	  },
	  { name: "twitter:title", content: "Stephan Koning Twitter" },
	  { name: "twitter:description", content: "Top Voice Linkedin" },
	],
  }}
  
/>

		<script is:inline>
			function handleThemeChange() {
				if (localStorage.theme === "dark" || (!("theme" in localStorage) && window.matchMedia("(prefers-color-scheme: dark)").matches)) {
					document.documentElement.classList.add("dark");
				} else {
					document.documentElement.classList.remove("dark");
				}
			}
			handleThemeChange();
			document.removeEventListener("astro:after-swap", handleThemeChange);
			document.addEventListener("astro:after-swap", handleThemeChange);
		</script>

		{pwaInfo && <Fragment set:html={pwaInfo.webManifest.linkTag} />}
		<script src="/src/pwa.ts"></script>
	</head>
	<body class="dark:bg-stone-950">
		<Navbar />
		<slot />
		<Footer />
		<style is:global>
			/* Improve Page speed */
			/* https://css-tricks.com/almanac/properties/c/content-visibility/ */
			img {
				content-visibility: auto;
			}
		</style>
	</body>
</html>
